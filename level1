    int F;
    cin >> F;
    cout << "farahenyt daxil edin: ";
    int C;
    cin >> C;
    cout << "F + C = " << (F + C) << endl;
    cout << "F * C + 32 = " << (F * C + 32) << endl;
    return 0;
}
