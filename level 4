\\task 15

int main() {
    int eded, enBoyuk;
    cout << "Ededleri daxil edin (0 daxil etdikde dayanacaq): ";
    cin >> eded;               
    enBoyuk = eded;            
    while(eded != 0) {    
        cin >> eded;            
     if(eded > enBoyuk) {    
            enBoyuk = eded;
        }
    }
    cout << "En boyuk eded: " << enBoyuk;
    return 0;
}
