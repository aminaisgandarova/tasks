\\task 9
int main() {
    for(int i = 1; i <= 1000; i++) {
        int t = i, rev = 0;
        while(t > 0) {
            rev = rev * 10 + t % 10;
            t /= 10;
        }
        if(rev == i) cout << i << " ";
    }
}
