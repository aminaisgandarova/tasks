\\task 3
int main() {
    int sum = 0;
    for(int i = 1; i <= 100; i++) {
        sum += i;
    }
    cout << "cem = " << sum << endl;
    return 0;
}
\\task 4
int main() {
    int n;
    int fakt = 1;
    cout << "eded daxil edin= ";
    cin >> n;
    for(int i = 1; i <= n; i++) {
        fakt *= i;
    }
    cout << "faktorial = " << fakt << endl;
    return 0;
}
\\task 5
int main() {
    int n, sum = 0;
    cout << "eded daxil edin= ";
    cin >> n;
    while(n > 0) {
        sum += n % 10; 
        n /= 10;
    }
    cout << "reqemlerin cemi = " << sum << endl;
    return 0;
}
