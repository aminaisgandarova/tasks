\\task 5
int main() {
    int n;
    cout << "Eded daxil edin: ";
    cin >> n;
    int sayi = 0;
    for(int i = 1; i <= n; i++) {
        if(n % i == 0) sayi++;
    }
    cout << "Tam bolenlerin sayi: " << sayi << endl;
    return 0;
}
