\\task 7
int main() {
    cout << "Armstrong ededler: ";
    for(int i = 1; i <= 999; i++) {
        int kopya= i;  
        int sum = 0;   
        while(kopya > 0) {
            int reqem = kopya % 10;   
            sum += reqem * reqem * reqem; 
            kopya /= 10;            
        }
        if(sum == i) cout << i << " ";
    }
    return 0;
}
