\\task 11
int main() {
    int a = 0, b = 1;
    cout << "Fibonacci 1000-den kicik=";
    while(a < 1000) {
        cout << a << " ";
        int c = a + b;
        a = b;
        b = c;
    }
    cout << endl;
    return 0;
}
\\task 12
int main() {
    int n;
    cout << "Eded daxil edin=";
    cin >> n;
    int sum = 0;
    for(int i = 1; i < n; i++) {
        if(n % i == 0) sum += i;
    }
    if(sum == n) cout << n << " mukemmel ededdir\n";
    else cout << n << " mukemmel eded deyil\n";
    return 0;
}
