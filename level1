\\task 7
int main() {
    int a, b;
    cout << "Birinci ededi daxil edin: ";
    cin >> a;
    cout << "İkinci ededi daxil edin: ";
    cin >> b;
    a = a + b;
    b = a - b;
    a = a - b;
    cout << " a = " << a << ", b = " << b << endl;
   return 0;
}
