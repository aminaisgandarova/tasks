\\task 2
int main() {
    int cem, hasil, bolme, ferq;
    int x, y;
    cout << "reqem daxil edin 1: ";
    cin >> x;
    cout << "reqem daxil edin 2: ";
    cin >> y;
    cem = x + y;
    cout << "cem = " << cem << endl;
    hasil = x * y;
    cout << "hasil = " << hasil << endl;
    bolme = x / y;
    cout << "bolme = " << bolme << endl;
    ferq = x - y;
    cout << "ferq = " << ferq << endl;

    return 0;
}
\\task 3
int main() {
    int kub, kvadrat;
    int x;
    cout << "reqem daxil edin = ";
    cin >> x;
    kub = x * x * x;
    cout << "kub = " << kub << endl;
    kvadrat = x * x;
    cout << "kvadrat = " << kvadrat << endl;
    return 0;
}
\\task 4
int main() {
    int sahe, uzunluq;
    int r;
    int p = 3;
    cout << "radius daxil edin = ";
    cin >> r;
    sahe = r * r * p;
    cout << "sahe = " << sahe << endl;
    uzunluq = 2 * r * p;
    cout << "uzunluq = " << uzunluq << endl;
   return 0;
}
