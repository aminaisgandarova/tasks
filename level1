  perimetr=teref*4;
  cout<<"sade="<<sahe<<"perimetr="<<perimetr<<endl;
  return 0;
}
\\task 9
int main() {
    int saniye;
    int saat, deqiqe, qaliqSaniye;
    cout << "Saniyəni daxil edin: ";
    cin >> saniye;
    saat = saniye / 3600;          
    deqiqe = (saniye % 3600) / 60; 
    qaliqSaniye = saniye % 60;    
    cout << saat << " saat, " 
         << deqiqe << " dəq, " 
         << qaliqSaniye << " saniye" << endl;
return 0;
}
